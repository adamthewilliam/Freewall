{
  "manifest_version": 3,
  "name": "Freewall",
  "version": "1.0",
  "description": "Allows you to bypass paywalls by redirecting you to web archive when you click a link",
  "permissions": [
    "contextMenus", "activeTab", "storage", "scripting", "notifications"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Click to be free"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["https://*/*"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "./icons/icon16.png",
    "32": "./icons/icon32.png",
    "48": "./icons/icon48.png",
    "128": "./icons/icon128.png"
  }
}