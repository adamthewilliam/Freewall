{
  "manifest_version": 3,
  "name": "Archive Me",
  "version": "1.0",
  "description": "Automatically open links in Webpage Archive to avoid paywalls.",
  "permissions": [
    "contextMenus", "activeTab", "storage", "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
 ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["https://*/*"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}